{
  "name": "three-perspective",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": "./dist/index.js",
    "./fullscreen.css": "./dist/fullscreen.css"
  },
  "scripts": {
    "build": "npm run clean || true && npm run esbuild && npm run declarations && npm run copy",
    "clean": "rm -r ./dist/*",
    "dev": "vite",
    "esbuild": "node build.js",
    "tsc": "tsc -p tsconfig.app.json",
    "declarations": "tsc -p tsconfig.app.json --emitDeclarationOnly",
    "copy": "cp src/fullscreen.css dist/fullscreen.css",
    "preview": "vite preview",
    "build-only": "npm run clean && vite build",
    "type-check": "vue-tsc --noEmit -p tsconfig.app.json --composite false"
  },
  "peerDependencies": {
    "three": "^0.153.0",
    "vue": "^3.3.2"
  },
  "dependencies": {
    "@vueuse/core": "^10.1.2"
  },
  "devDependencies": {
    "@babel/types": "^7.22.5",
    "@rollup/plugin-typescript": "^11.1.1",
    "@tsconfig/node18": "^2.0.1",
    "@types/node": "^18.16.8",
    "@types/three": "^0.152.1",
    "@vitejs/plugin-vue": "^4.2.3",
    "@vue/tsconfig": "^0.4.0",
    "esbuild-plugin-vue3": "^0.3.2",
    "npm-run-all": "^4.1.5",
    "tslib": "^2.5.3",
    "typescript": "~5.0.4",
    "vite": "^4.3.5",
    "vite-plugin-dts": "^2.3.0",
    "vue-tsc": "^1.6.4"
  }
}
